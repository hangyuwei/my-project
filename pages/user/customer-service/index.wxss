.customer-service-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 160rpx;
}

/* 客服信息卡片 */
.service-info-card {
  margin: 24rpx 32rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
}

.service-status {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1px solid #f5f5f5;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.status-dot.online {
  background: #52c41a;
}

.status-dot.offline {
  background: #999;
}

.status-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.service-details {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.detail-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
}

.action-btn {
  padding: 8rpx 24rpx;
  background: #FF6B6B;
  color: #fff;
  border-radius: 32rpx;
  font-size: 24rpx;
}

/* 快捷问题 */
.quick-questions {
  margin: 24rpx 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.questions-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.question-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.question-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 聊天区域 */
.chat-container {
  margin: 24rpx 32rpx;
}

.chat-messages {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  min-height: 400rpx;
  max-height: 600rpx;
  overflow-y: auto;
}

.message-item {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
}

.message-item.user {
  align-items: flex-end;
}

.message-item.service {
  align-items: flex-start;
}

.message-content {
  max-width: 70%;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  word-break: break-word;
}

.message-item.user .message-content {
  background: #FF6B6B;
}

.message-item.user .message-text {
  color: #fff;
}

.message-item.service .message-content {
  background: #f5f5f5;
}

.message-item.service .message-text {
  color: #333;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.6;
  white-space: pre-wrap;
}

.message-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 输入框 */
.input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 16rpx 32rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.input-wrapper {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.message-input {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  font-size: 28rpx;
}

.send-btn {
  width: 120rpx;
  height: 72rpx;
  background: #FF6B6B;
  color: #fff;
  border-radius: 36rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.transfer-btn {
  width: 100%;
  height: 72rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 28rpx;
}
