.tabbar-position {
  position: fixed !important;
  bottom: 0;
  left: 0;
  width: 100%;
}

page {
  min-height: 100%;
  padding-bottom: 0;
  background-color: #f5f5f5;
}

/* 分类页面整体布局 */
.category-page {
  display: flex;
  height: 100vh;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}

/* 左侧分类导航 */
.category-sidebar {
  width: 200rpx;
  height: 100%;
  background: linear-gradient(180deg, #fafafa 0%, #f0f0f0 100%);
  flex-shrink: 0;
  padding-top: 20rpx;
}

.sidebar-item {
  position: relative;
  padding: 36rpx 24rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  background-color: transparent;
  transition: all 0.3s ease;
  margin: 8rpx 12rpx;
  border-radius: 16rpx;
}

.sidebar-item:active {
  background-color: rgba(250, 65, 38, 0.08);
}

.sidebar-item.active {
  background-color: #fff;
  color: #fa4126;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(250, 65, 38, 0.15);
}

.sidebar-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 40rpx;
  background: linear-gradient(180deg, #ff6b4a 0%, #fa4126 100%);
  border-radius: 0 6rpx 6rpx 0;
}

/* 右侧商品内容 */
.category-content {
  flex: 1;
  height: 100%;
  background-color: #fff;
  padding: 24rpx;
  box-sizing: border-box;
  border-radius: 24rpx 0 0 0;
  margin-top: 20rpx;
}

.category-header {
  padding: 8rpx 8rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.category-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.category-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 36rpx;
  background: linear-gradient(180deg, #ff6b4a 0%, #fa4126 100%);
  border-radius: 4rpx;
}

.category-goods-list {
  margin-top: 16rpx;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-tip::before {
  content: '';
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  border-radius: 50%;
  margin-bottom: 24rpx;
}
