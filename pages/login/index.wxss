/* pages/login/index.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 60rpx;
}

/* 顶部装饰 */
.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -200rpx;
  right: -100rpx;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  top: 100rpx;
  left: -150rpx;
}

/* Logo 区域 */
.logo-section {
  margin-top: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 10;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 32rpx;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.app-name {
  margin-top: 40rpx;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.app-slogan {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 用户信息展示 */
.user-info-section {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 10;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.nickname {
  margin-top: 24rpx;
  font-size: 32rpx;
  color: #fff;
  font-weight: 500;
}

/* 登录按钮区域 */
.login-actions {
  width: 100%;
  margin-top: 80rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  z-index: 10;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s;
}

.login-btn::after {
  border: none;
}

.primary-btn {
  background: #fff;
  color: #667eea;
}

.success-btn {
  background: #07c160;
  color: #fff;
}

.secondary-btn {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  backdrop-filter: blur(10rpx);
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

/* 协议说明 */
.agreement-section {
  margin-top: 60rpx;
  z-index: 10;
}

.agreement-label {
  display: flex;
  align-items: flex-start;
}

.agreement-text {
  margin-left: 12rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
}

.link {
  color: #fff;
  text-decoration: underline;
  font-weight: 500;
}

/* 其他登录方式 */
.other-login {
  width: 100%;
  margin-top: 60rpx;
  z-index: 10;
}

.divider {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.divider .line {
  flex: 1;
  height: 1rpx;
  background: rgba(255, 255, 255, 0.3);
}

.divider .text {
  margin: 0 24rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.other-methods {
  display: flex;
  justify-content: center;
  gap: 60rpx;
}

.method-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.method-icon {
  width: 80rpx;
  height: 80rpx;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  backdrop-filter: blur(10rpx);
}

.method-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 底部装饰 */
.footer-decoration {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
}

.wave {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50% 50% 0 0;
}

.wave-1 {
  animation: wave 3s ease-in-out infinite;
}

.wave-2 {
  height: 80rpx;
  opacity: 0.5;
  animation: wave 4s ease-in-out infinite reverse;
}

@keyframes wave {
  0%, 100% {
    transform: translateX(0) translateY(0);
  }
  50% {
    transform: translateX(-20rpx) translateY(-10rpx);
  }
}
