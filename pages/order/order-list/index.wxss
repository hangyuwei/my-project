:host {
  background-color: var(--color-bg-page);
}

/* ==================== Dialog 遮罩层修复 ==================== */
.t-dialog__wrapper {
  z-index: 12000 !important;
}

.t-overlay {
  z-index: 11999 !important;
}

/* ==================== 标签栏样式 ==================== */
.page-container .tab-bar__placeholder,
.page-container .tab-bar__inner {
  height: 88rpx;
  line-height: 88rpx;
  background: var(--color-bg-white);
}

.page-container .tab-bar__inner {
  font-size: 26rpx;
  color: var(--color-text-primary);
  position: fixed;
  width: 100vw;
  top: 0;
  left: 0;
  z-index: var(--z-index-sticky);
  box-shadow: var(--shadow-sm);
}

.page-container .tab-bar__inner.order-nav .order-nav-item .bottom-line {
  bottom: 12rpx;
}

.tab-bar__inner .t-tabs-is-active {
  color: var(--color-primary);
}

.tab-bar__inner .t-tabs-track {
  background: var(--color-primary);
  transition: all var(--duration-normal) var(--ease-out);
}

.page-container .tab-bar__active {
  font-size: var(--font-size-body);
  font-weight: var(--font-weight-medium);
}

/* ==================== 弹窗按钮样式 ==================== */
.page-container .specs-popup .bottom-btn {
  color: var(--color-primary);
}

.page-container .specs-popup .bottom-btn::after {
  border-color: var(--color-primary);
}

.dialog .dialog__button-confirm {
  color: var(--color-primary);
}

/* ==================== 加载和空状态 ==================== */
.list-loading {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-wrapper {
  height: calc(100vh - 88rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-bar {
  margin-top: 20rpx;
}

.load-more {
  margin: 0 var(--spacing-md);
}

/* ==================== 订单卡片间距 ==================== */
wr-order-goods-card:not(:first-child) .wr-goods-card {
  margin-top: 40rpx;
}

/* ==================== 价格总计 ==================== */
.price-total {
  font-size: var(--font-size-caption);
  line-height: 32rpx;
  color: var(--color-text-tertiary);
  padding-top: 10rpx;
  width: 100%;
  display: flex;
  align-items: baseline;
  justify-content: flex-end;
  gap: var(--spacing-xs);
}

.price-total .bold-price {
  color: var(--color-text-primary);
  font-size: var(--font-size-body);
  line-height: 40rpx;
  font-weight: var(--font-weight-medium);
}

.price-total .real-pay {
  font-size: var(--font-size-h1);
  line-height: 48rpx;
  color: var(--color-primary);
  font-weight: var(--font-weight-bold);
}

/* ==================== TDesign 组件覆盖 ==================== */
.t-tabs.t-tabs--top .t-tabs-scroll {
  border: none;
}

.t-empty-text {
  font-size: var(--font-size-body);
  color: var(--color-text-tertiary);
}

.page-container .order-number {
  color: var(--color-text-secondary);
  font-size: var(--font-size-body);
}

.t-class-indicator {
  color: #b9b9b9;
}

.tab-bar .tab-bar__active {
  color: var(--color-text-primary);
}

.tab-bar .t-tabs-track {
  background: var(--color-text-primary);
}

.t-button {
  --td-button-default-color: #000;
  --td-button-primary-text-color: var(--color-primary);
}

/* ==================== 订单卡片增强 ==================== */
.order-card {
  background: var(--color-bg-white);
  border-radius: var(--radius-lg);
  margin: var(--spacing-sm) var(--spacing-md);
  padding: var(--spacing-md);
  box-shadow: var(--shadow-sm);
  transition: all var(--duration-normal) var(--ease-out);
}

.order-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-md);
}

.order-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: var(--spacing-sm);
  border-bottom: 1rpx solid var(--color-border);
  margin-bottom: var(--spacing-sm);
}

.order-card-number {
  font-size: var(--font-size-caption);
  color: var(--color-text-secondary);
}

.order-card-status {
  font-size: var(--font-size-caption);
  color: var(--color-primary);
  font-weight: var(--font-weight-medium);
}

/* ==================== 订单状态标签 ==================== */
.status-tag {
  display: inline-block;
  padding: 4rpx var(--spacing-sm);
  border-radius: var(--radius-xl);
  font-size: var(--font-size-tiny);
  font-weight: var(--font-weight-medium);
}

.status-tag.pending {
  background: var(--color-warning-light);
  color: var(--color-warning);
}

.status-tag.paid {
  background: var(--color-info-light);
  color: var(--color-info);
}

.status-tag.shipped {
  background: var(--color-primary-light);
  color: var(--color-primary);
}

.status-tag.completed {
  background: var(--color-success-light);
  color: var(--color-success);
}

.status-tag.cancelled {
  background: var(--color-bg-gray);
  color: var(--color-text-tertiary);
}

/* ==================== 加载骨架屏 ==================== */
.order-skeleton {
  background: var(--color-bg-white);
  border-radius: var(--radius-lg);
  margin: var(--spacing-sm) var(--spacing-md);
  padding: var(--spacing-md);
}

.skeleton-line {
  height: 32rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: var(--radius-sm);
  margin-bottom: var(--spacing-xs);
}

.skeleton-line.short {
  width: 60%;
}

.skeleton-line.medium {
  width: 80%;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* ==================== 空状态优化 ==================== */
.empty-orders {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-2xl);
}

.empty-orders-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: var(--spacing-md);
  opacity: 0.5;
}

.empty-orders-text {
  font-size: var(--font-size-body);
  color: var(--color-text-tertiary);
  margin-bottom: var(--spacing-md);
}

.empty-orders-button {
  padding: var(--spacing-sm) var(--spacing-lg);
  background-color: var(--color-primary);
  color: var(--color-text-white);
  border-radius: var(--radius-xl);
  font-size: var(--font-size-body);
  transition: all var(--duration-fast) var(--ease-out);
}

.empty-orders-button:active {
  transform: scale(0.95);
  background-color: var(--color-primary-dark);
}

/* ==================== 下拉刷新指示器 ==================== */
.pull-refresh-indicator {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: var(--spacing-md);
  color: var(--color-text-tertiary);
  font-size: var(--font-size-caption);
}

.pull-refresh-loading {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid var(--color-border);
  border-top-color: var(--color-primary);
  border-radius: var(--radius-full);
  animation: spin 0.8s linear infinite;
  margin-right: var(--spacing-xs);
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* ==================== 订单操作按钮 ==================== */
.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: var(--spacing-sm);
  margin-top: var(--spacing-sm);
}

.order-action-btn {
  padding: var(--spacing-xs) var(--spacing-md);
  border-radius: var(--radius-xl);
  font-size: var(--font-size-caption);
  transition: all var(--duration-fast) var(--ease-out);
}

.order-action-btn.primary {
  background-color: var(--color-primary);
  color: var(--color-text-white);
}

.order-action-btn.primary:active {
  background-color: var(--color-primary-dark);
}

.order-action-btn.secondary {
  background-color: var(--color-bg-gray);
  color: var(--color-text-secondary);
}

.order-action-btn.secondary:active {
  background-color: var(--color-border);
}

/* ==================== 订单时间轴 ==================== */
.order-timeline {
  padding: var(--spacing-md) 0;
}

.timeline-item {
  display: flex;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-sm);
}

.timeline-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: var(--radius-full);
  background-color: var(--color-primary);
  margin-top: 8rpx;
  flex-shrink: 0;
}

.timeline-content {
  flex: 1;
}

.timeline-title {
  font-size: var(--font-size-body);
  color: var(--color-text-primary);
  margin-bottom: 4rpx;
}

.timeline-time {
  font-size: var(--font-size-caption);
  color: var(--color-text-tertiary);
}
