/* 页面背景 - 使用设计令牌 */
page {
  background-color: var(--color-bg-page);
  padding-bottom: calc(env(safe-area-inset-bottom) + 180rpx);
}

/* 内容区域 */
.content-wrapper {
  margin-top: 300rpx;
  position: relative;
  padding: 0 var(--spacing-md);
}

.main-content {
  height: 500rpx;
}

/* 订单分组容器 */
.order-group-wrapper {
  margin-bottom: 20rpx;
}

.order-group-note {
  font-size: 26rpx;
  color: var(--color-text-secondary);
}

/* 菜单卡片 - 统一风格 */
.cell-box {
  border-radius: var(--radius-lg);
  overflow: hidden;
  margin-bottom: var(--spacing-sm);
  background: rgba(255, 255, 255, 0.95);
  box-shadow: var(--shadow-md);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  transition: all var(--duration-normal) var(--ease-out);
}

.cell-box:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-lg);
}

/* 图标颜色 - 深色调 */
.icon-color {
  color: #1a1a2e;
}

/* 单元格样式 */
.cell-class {
  height: 100rpx;
  display: flex;
  align-items: center;
  transition: background-color var(--duration-fast) var(--ease-out);
}

.cell-class:active {
  background-color: var(--color-bg-gray);
}

/* 订单内容区 */
.order-content {
  overflow: hidden;
  width: 100%;
  display: flex;
  background-color: var(--color-bg-white);
  border-radius: var(--radius-lg);
}

.order-item {
  flex: 1;
  height: 160rpx;
  overflow: hidden;
  position: relative;
  text-align: center;
  transition: background-color var(--duration-fast) var(--ease-out);
}

.order-item:active {
  background-color: var(--color-bg-gray);
}

.order-content-box {
  margin: auto;
  position: absolute;
  width: 100%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.order-content-t {
  margin-top: 10rpx;
  font-size: var(--font-size-caption);
  color: #4a4a5a;
  letter-spacing: 0;
  text-align: center;
}

/* 弹窗样式 - 深色主题 */
.popup-content {
  background: var(--color-bg-page);
  margin-bottom: env(safe-area-inset-bottom);
  border-radius: var(--radius-xl) var(--radius-xl) 0 0;
}

.popup-content .popup-title {
  background: var(--color-bg-white);
  text-align: center;
  font-size: var(--font-size-caption);
  color: var(--color-text-tertiary);
  height: 100rpx;
  line-height: 100rpx;
  border-radius: var(--radius-xl) var(--radius-xl) 0 0;
}

.border-bottom-1px {
  position: relative;
}

.border-bottom-1px::after {
  position: absolute;
  display: block;
  content: '';
  box-sizing: border-box;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: left top;
  border-bottom: 1rpx solid rgba(26, 26, 46, 0.08);
}

.popup-content .popup-phone,
.popup-content .popup-close {
  background: var(--color-bg-white);
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 30rpx;
  font-weight: var(--font-weight-medium);
  color: #1a1a2e;
  transition: background var(--duration-fast) var(--ease-out);
}

.popup-content .popup-phone:active,
.popup-content .popup-close:active {
  background: var(--color-bg-page);
}

.popup-content .popup-phone.online {
  margin-bottom: var(--spacing-sm);
  color: #d4af37;
}

.popup-content .popup-phone.online::after {
  content: none;
}

.popup-content .popup-close {
  color: var(--color-text-tertiary);
  border: 0;
  margin-top: 12rpx;
}

/* 我的订单 */
.my-order {
  border-radius: var(--radius-lg);
}

/* 版本号 */
.footer__version {
  text-align: center;
  margin-top: var(--spacing-xl);
  margin-bottom: var(--spacing-lg);
  color: var(--color-text-placeholder);
  font-size: 22rpx;
  line-height: 32rpx;
  letter-spacing: 1rpx;
}

/* 单元格内部样式覆盖 */
.cell-box .order-group__left {
  margin-right: 0;
}

.cell-box .t-cell-padding {
  padding: 28rpx var(--spacing-md) 28rpx var(--spacing-lg);
}

/* TDesign 组件样式覆盖 */
.cell-box .t-cell__title {
  font-size: var(--font-size-body);
  color: #1a1a2e;
  font-weight: var(--font-weight-medium);
}

.cell-box .t-cell__right-icon {
  color: var(--color-text-placeholder);
  transition: color var(--duration-fast) var(--ease-out);
}

.cell-box:active .t-cell__right-icon {
  color: var(--color-primary);
}

/* 分组标题 */
.cell-box .t-cell-group__title {
  padding: var(--spacing-md) var(--spacing-lg) 12rpx;
  font-size: var(--font-size-caption);
  color: var(--color-text-tertiary);
  letter-spacing: 1rpx;
}

/* ==================== 订单图标动画 ==================== */
.order-item .order-icon {
  transition: transform var(--duration-normal) var(--ease-bounce);
}

.order-item:active .order-icon {
  transform: scale(1.1);
}

/* ==================== 菜单项悬停效果 ==================== */
.cell-box .t-cell {
  position: relative;
  overflow: hidden;
}

.cell-box .t-cell::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 0;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(250, 65, 38, 0.05));
  transition: width var(--duration-normal) var(--ease-out);
}

.cell-box .t-cell:active::before {
  width: 100%;
}

/* ==================== 徽章样式 ==================== */
.badge-wrapper {
  position: relative;
}

.badge-dot {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: var(--color-error);
  border-radius: var(--radius-full);
  border: 2rpx solid var(--color-bg-white);
}

.badge-count {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background-color: var(--color-error);
  border-radius: var(--radius-full);
  border: 2rpx solid var(--color-bg-white);
  font-size: var(--font-size-tiny);
  color: var(--color-text-white);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: var(--font-weight-semibold);
}

/* ==================== 加载状态 ==================== */
.loading-skeleton {
  background: var(--color-bg-white);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-sm);
}

.skeleton-item {
  height: 100rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: var(--radius-md);
  margin-bottom: var(--spacing-xs);
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* ==================== 空状态优化 ==================== */
.empty-orders {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-2xl) 0;
}

.empty-orders-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: var(--spacing-md);
  opacity: 0.5;
}

.empty-orders-text {
  font-size: var(--font-size-body);
  color: var(--color-text-tertiary);
  margin-bottom: var(--spacing-md);
}

.empty-orders-button {
  padding: var(--spacing-sm) var(--spacing-lg);
  background-color: var(--color-primary);
  color: var(--color-text-white);
  border-radius: var(--radius-xl);
  font-size: var(--font-size-body);
  transition: all var(--duration-fast) var(--ease-out);
}

.empty-orders-button:active {
  transform: scale(0.95);
  background-color: var(--color-primary-dark);
}
