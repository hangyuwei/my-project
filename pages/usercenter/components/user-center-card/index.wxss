/* 用户中心卡片 - 深色轻奢风格 */
.user-center-card {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 480rpx;
  background: linear-gradient(165deg, #1a1a2e 0%, #16213e 40%, #0f3460 100%);
  padding: 0;
  overflow: hidden;
}

/* 装饰性光效 - 右上角 */
.user-center-card::before {
  content: '';
  position: absolute;
  top: -80rpx;
  right: -80rpx;
  width: 320rpx;
  height: 320rpx;
  background: radial-gradient(circle, rgba(212,175,55,0.15) 0%, transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}

/* 装饰性光效 - 左下角 */
.user-center-card::after {
  content: '';
  position: absolute;
  bottom: -60rpx;
  left: -60rpx;
  width: 240rpx;
  height: 240rpx;
  background: radial-gradient(circle, rgba(212,175,55,0.08) 0%, transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}

/* 底部过渡渐变 */
.user-center-card-fade {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: linear-gradient(to top, #f8f9fa 0%, transparent 100%);
  pointer-events: none;
  z-index: 5;
}

/* 用户信息头部 */
.user-center-card__header {
  margin-top: 160rpx;
  margin-left: 48rpx;
  margin-right: 48rpx;
  height: auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
  z-index: 10;
}

/* 头像样式 - 金色边框 */
.user-center-card__header__avatar {
  width: 128rpx !important;
  height: 128rpx !important;
  border-radius: 64rpx !important;
  overflow: visible !important;
  border: 4rpx solid rgba(212,175,55,0.7) !important;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.3);
  transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.user-center-card__header__avatar:active {
  transform: scale(0.92);
}

/* 头像内部图片 */
.user-center-card__header__avatar .avatar {
  width: 128rpx !important;
  height: 128rpx !important;
}

/* TDesign Avatar 外部样式类 */
.avatar-style {
  width: 128rpx !important;
  height: 128rpx !important;
  border-radius: 64rpx !important;
  border: 4rpx solid rgba(212,175,55,0.7) !important;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.3) !important;
  overflow: hidden !important;
}

.avatar-image {
  width: 128rpx !important;
  height: 128rpx !important;
  border-radius: 64rpx !important;
}

/* 用户名样式 */
.user-center-card__header__name {
  font-size: 40rpx;
  line-height: 52rpx;
  color: #ffffff;
  font-weight: 600;
  margin-left: 32rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 12rpx rgba(0,0,0,0.3);
}

/* 透明点击层 */
.user-center-card__header__transparent {
  position: absolute;
  left: 0;
  top: 0;
  background-color: transparent;
  height: 100%;
  width: 100%;
}

/* 图标样式 */
.user-center-card__icon {
  line-height: 128rpx;
  color: rgba(255,255,255,0.7);
}

/* 编辑提示箭头 */
.user-center-card__header__arrow {
  margin-left: auto;
  color: rgba(212,175,55,0.8);
  font-size: 32rpx;
}

/* 会员标签 */
.user-center-card__vip-badge {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 50%, #d4af37 100%);
  border-radius: 20rpx;
  margin-left: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(212,175,55,0.4);
}

.user-center-card__vip-badge text {
  font-size: 20rpx;
  color: #1a1a2e;
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* 统计数据区域 */
.user-center-card__stats {
  display: flex;
  justify-content: space-around;
  margin: 40rpx 48rpx 0;
  padding: 24rpx 0;
  border-top: 1rpx solid rgba(255,255,255,0.1);
  position: relative;
  z-index: 10;
}

.user-center-card__stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-center-card__stats-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #d4af37;
  letter-spacing: 1rpx;
}

.user-center-card__stats-label {
  font-size: 22rpx;
  color: rgba(255,255,255,0.6);
  margin-top: 8rpx;
  letter-spacing: 1rpx;
}
