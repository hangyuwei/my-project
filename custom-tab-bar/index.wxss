/* ==================== 自定义标签栏容器 ==================== */
.custom-tab-bar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 0 16rpx 0;
  transition: all var(--duration-fast) var(--ease-out);
}

/* 点击时整体缩放效果 - 与个人中心一致 */
.custom-tab-bar-wrapper:active {
  transform: scale(0.92);
}

.custom-tab-bar-wrapper .text {
  font-size: 26rpx;
  margin-top: 8rpx;
  color: var(--color-text-secondary);
  line-height: 1.3;
  transition: color var(--duration-fast) var(--ease-out);
}

/* 激活状态文字 */
.custom-tab-bar-wrapper.active .text {
  color: var(--color-primary);
  font-weight: var(--font-weight-medium);
}

/* ==================== TDesign TabBar 样式覆盖 ==================== */
.custom-tab-bar {
  padding-bottom: env(safe-area-inset-bottom);
  height: auto;
  min-height: 140rpx;
  background: #ffffff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.04);
  border-top: none !important;
  border: none !important;
  position: relative;
}

/* 用伪元素覆盖可能的缝隙 */
.custom-tab-bar::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #ffffff;
  z-index: 10;
}

/* 移除 TDesign 默认边框 - 这是导致缝隙的原因 */
.t-tab-bar {
  border: none !important;
  border-top: none !important;
  background: #ffffff !important;
}

.t-tab-bar::before {
  display: none !important;
  border: none !important;
}

.t-tab-bar::after {
  display: none !important;
  border: none !important;
}

.custom-tab-bar::after {
  display: none !important;
}

.custom-tab-bar-item {
  min-height: 120rpx;
  padding: 16rpx 0;
  position: relative;
}

/* ==================== 图标动画 ==================== */
.tab-icon {
  transition: transform var(--duration-normal) var(--ease-bounce);
}

.custom-tab-bar-item.active .tab-icon {
  transform: scale(1.1);
}

/* 点击时图标缩小再弹回 - 与个人中心一致 */
.custom-tab-bar-wrapper:active .t-icon {
  transform: scale(0.85);
}

/* ==================== 徽章样式 ==================== */
.tab-badge {
  position: absolute;
  top: 8rpx;
  right: 50%;
  margin-right: -40rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background-color: var(--color-error);
  border-radius: var(--radius-full);
  border: 2rpx solid var(--color-bg-white);
  font-size: var(--font-size-tiny);
  color: var(--color-text-white);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: var(--font-weight-semibold);
  z-index: 1;
}

.tab-badge-dot {
  position: absolute;
  top: 12rpx;
  right: 50%;
  margin-right: -32rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: var(--color-error);
  border-radius: var(--radius-full);
  border: 2rpx solid var(--color-bg-white);
  z-index: 1;
}

/* ==================== 激活指示器 ==================== */
.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background: var(--color-primary);
  border-radius: 3rpx 3rpx 0 0;
  opacity: 0;
  transition: opacity var(--duration-normal) var(--ease-out);
}

.custom-tab-bar-item.active .tab-indicator {
  opacity: 1;
}

/* ==================== 涟漪效果 ==================== */
.custom-tab-bar-item::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0);
  width: 100rpx;
  height: 100rpx;
  background: radial-gradient(circle, rgba(250, 65, 38, 0.1) 0%, transparent 70%);
  border-radius: var(--radius-full);
  transition: transform var(--duration-normal) var(--ease-out);
  pointer-events: none;
}

.custom-tab-bar-item:active::before {
  transform: translate(-50%, -50%) scale(1);
}

/* ==================== 响应式优化 ==================== */
@media (max-width: 375px) {
  .custom-tab-bar-wrapper .text {
    font-size: 24rpx;
  }

  .custom-tab-bar {
    min-height: 120rpx;
  }

  .custom-tab-bar-item {
    min-height: 100rpx;
  }
}

/* ==================== 深色模式支持 ==================== */
@media (prefers-color-scheme: dark) {
  .custom-tab-bar {
    background: #1a1a1a;
    box-shadow: 0 -2rpx 8rpx rgba(255, 255, 255, 0.04);
  }

  .tab-badge,
  .tab-badge-dot {
    border-color: #1a1a1a;
  }
}

