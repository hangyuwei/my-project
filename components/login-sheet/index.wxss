/* 登录弹窗容器 */
.login-sheet {
  position: relative;
  background: #FFFFFF;
  border-radius: 32rpx 32rpx 0 0;
  padding: 60rpx 48rpx 80rpx;
  min-height: 800rpx;
}

/* 关闭按钮 */
.login-sheet__close {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.close-icon {
  font-size: 40rpx;
  color: #999999;
  font-weight: 300;
}

/* 品牌标题区域 */
.login-sheet__header {
  text-align: center;
  margin-bottom: 48rpx;
}

.brand-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #059669;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.brand-subtitle {
  font-size: 28rpx;
  color: #666666;
  letter-spacing: 4rpx;
}

/* 优惠券诱饵区域 */
.login-sheet__coupon {
  background: linear-gradient(135deg, #059669 0%, #10B981 100%);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 48rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(5, 150, 105, 0.2);
}

.coupon-badge {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  margin-right: 24rpx;
  min-width: 140rpx;
}

.coupon-amount {
  font-size: 56rpx;
  font-weight: 700;
  color: #FFFFFF;
  line-height: 1;
  margin-bottom: 8rpx;
}

.coupon-label {
  font-size: 24rpx;
  color: #FFFFFF;
  opacity: 0.9;
}

.coupon-desc {
  flex: 1;
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 1.5;
}

/* 手机号展示区域 */
.login-sheet__phone {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F5F5F4;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
}

.phone-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.phone-number {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  letter-spacing: 2rpx;
}

/* 微信授权区域 */
.login-sheet__auth {
  background: #F5F5F4;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 40rpx;
}

.auth-avatar-row,
.auth-nickname-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
}

.auth-avatar-row {
  border-bottom: 1rpx solid #E5E5E5;
}

.auth-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.avatar-button {
  display: flex;
  align-items: center;
  background: transparent;
  padding: 0;
  margin: 0;
  border: none;
  line-height: normal;
}

.avatar-button::after {
  border: none;
}

.avatar-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #E5E5E5;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999999;
  margin-left: 16rpx;
}

.nickname-input {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #333333;
  background: transparent;
}

/* 登录按钮区域 */
.login-sheet__button {
  margin-bottom: 32rpx;
}

.login-button {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #059669 0%, #10B981 100%);
  border-radius: 48rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(5, 150, 105, 0.3);
  transition: all 0.3s ease;
}

.login-button::after {
  border: none;
}

.login-button[disabled] {
  opacity: 0.6;
}

/* 协议勾选区域 */
.login-sheet__agreement {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  margin-bottom: 32rpx;
  padding: 0 16rpx;
}

.agreement-text {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.6;
  margin-left: 12rpx;
}

.agreement-link {
  color: #059669;
  font-weight: 500;
  padding: 0 4rpx;
}

/* 安全提示区域 */
.login-sheet__tips {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
}

.tips-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #999999;
}
