/* 边框 */
.border-around, .border-bottom-1px, .border-left-1px, .border-right-1px, .border-top-1px {
  position: relative;
  border: 1rpx solid var(--color-border);
}

.border-top-1px { border-width: 1rpx 0 0 0; }
.border-right-1px { border-width: 0 1rpx 0 0; }
.border-bottom-1px { border-width: 0 0 1rpx 0; }
.border-left-1px { border-width: 0 0 0 1rpx; }

.border-t-1px, .border-r-1px, .border-b-1px, .border-l-1px {
  position: relative;
}

.border-t-1px::after, .border-r-1px::after, .border-b-1px::after, .border-l-1px::after {
  content: '';
  position: absolute;
  border-width: 2rpx;
  border-color: var(--color-border-light);
  border-style: solid;
}

.border-t-1px::after {
  left: 0;
  top: 0;
  width: 100%;
  transform: scaleY(0.5);
}

.border-b-1px::after {
  left: 0;
  bottom: 0;
  width: 100%;
  transform: scaleY(0.5);
}

.border-l-1px::after {
  left: 0;
  top: 0;
  height: 100%;
  transform: scaleX(0.5);
}

.border-r-1px::after {
  right: 0;
  top: 0;
  height: 100%;
  transform: scaleX(0.5);
}

.mo-border-1rpx {
  position: relative;
  z-index: 0;
}

.mo-border-1rpx::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 200%;
  height: 200%;
  border-width: 2rpx;
  border-style: solid;
  transform: scale(0.5);
  transform-origin: 0 0;
  z-index: -1;
  box-sizing: border-box;
}

/* 箭头 */
