/* 导入设计令牌 */
@import "design-tokens.wxss";

/* TDesign 组件主题定制 */
.t-input {
  --td-input-placeholder-text-color: var(--color-text-placeholder);
  --td-input-text-color: var(--color-text-primary);
}

.t-tab-bar {
  --td-tab-bar-color: var(--color-text-tertiary);
  --td-tab-bar-active-color: var(--color-text-primary);
}

.t-cascader {
  --td-cascader-active-color: var(--color-primary);
}

.t-switch {
  --td-switch-checked-color: var(--color-success);
}

.t-button {
  --td-button-font-weight: var(--font-weight-medium);
  --td-button-medium-font-size: var(--font-size-h2);
  --td-button-default-color: var(--color-text-white);
  --td-button-default-bg-color: var(--color-primary);
  --td-button-default-border-color: var(--color-primary);
  --td-button-default-disabled-color: var(--color-text-white);
  --td-button-default-disabled-bg: var(--color-text-placeholder);
  --td-button-default-disabled-border-color: var(--color-text-placeholder);
  --td-button-default-active-bg-color: var(--color-primary-dark);
  --td-button-default-active-border-color: var(--color-primary-dark);
}

.t-textarea {
  --td-textarea-placeholder-color: var(--color-text-placeholder);
}

.t-checkbox {
  --td-checkbox-icon-checked-color: var(--color-primary);
}

.dialog__button-confirm {
  color: var(--color-primary);
}

.dialog__button-cancel {
  color: var(--color-text-tertiary);
}
